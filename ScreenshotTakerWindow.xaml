<Window x:Class="Piexe.ScreenshotTaker"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Piexe"
        xmlns:wpfgif="http://wpfanimatedgif.codeplex.com"
        mc:Ignorable="d"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        ShowInTaskbar="False"
        Topmost="True"
        Cursor="Cross"
        Title="Piexe" Height="450" Width="800">
    <Window.Background>
        <SolidColorBrush Opacity="0.1" Color="Black"/>
    </Window.Background>
    <Grid>
        <Rectangle x:Name="SelectingRectangle" ClipToBounds="True">
            <Rectangle.Fill>
                <SolidColorBrush Color="Black" Opacity="0.5"/>
            </Rectangle.Fill>
        </Rectangle>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Padding="10">
            <Border.Effect>
                <DropShadowEffect Color="CornflowerBlue" Direction="0" ShadowDepth="0" BlurRadius="10" Opacity="1"/>
            </Border.Effect>
        </Border>
        <Border x:Name="ToolBarBorder" MinHeight="3" MinWidth="60" Background="#55769899" BorderBrush="Transparent" CornerRadius="0,0,10,10" Padding="5"  HorizontalAlignment="Center" VerticalAlignment="Top" Cursor="Arrow">
            <StackPanel x:Name="ToolBarStack" Orientation="Horizontal">
                <Border x:Name="AnalyzeToggleButton" Background="DeepSkyBlue" BorderBrush="Transparent" Height="25" CornerRadius="12,0,0,12" Padding="10,1,10,1" MouseUp="AnalyzeToggleButton_MouseUp">
                    <TextBlock Text="Analyze" HorizontalAlignment="Center" Foreground="White" VerticalAlignment="Center" TextAlignment="Center" FontFamily="Segoe Print"/>
                </Border>

                <Border x:Name="ScreenshotToggleButton" Margin="0,0,10,0" Background="DarkGray" BorderBrush="Transparent" Height="25" CornerRadius="0,12,12,0" Padding="10,1,10,1" MouseUp="ScreenshotToggleButton_MouseUp">
                    <TextBlock Text="Screenshot" HorizontalAlignment="Center" Foreground="White" VerticalAlignment="Center" TextAlignment="Center" FontFamily="Segoe Print"/>
                </Border>

                <Border x:Name="CaptureButton" Background="Purple" BorderBrush="Transparent" CornerRadius="12" Height="25" Padding="10,1,10,1" HorizontalAlignment="Center" VerticalAlignment="Center" MouseUp="CaptureButton_MouseUp">
                    <TextBlock Text="Capture the whole screen" HorizontalAlignment="Center" Foreground="White" VerticalAlignment="Center" TextAlignment="Center" FontFamily="Segoe Print"/>
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</Window>
