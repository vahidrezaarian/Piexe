<Window x:Class="Piexe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Piexe"
        xmlns:wpfgif="http://wpfanimatedgif.codeplex.com"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        WindowStyle="None"
        ShowInTaskbar="True"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        MouseDown="WindowMouseDown"
        Title="Piexe" MaxWidth="900" MaxHeight="500" MinWidth="250" SizeToContent="WidthAndHeight">
    <Window.Background>
        <SolidColorBrush Opacity="0" Color="Black"/>
    </Window.Background>
    <Border x:Name="WindowsBorder" BorderThickness="1.5" CornerRadius="15" BorderBrush="DeepSkyBlue" Background="Transparent">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="Black" Opacity="0.9" BorderThickness="0" CornerRadius="15"/>

            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="45"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="70"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" x:Name="WindowTitle" Text="Piexe" Foreground="AliceBlue" FontFamily="Segoe Print" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="15,0,0,0" FontSize="17" FontWeight="SemiBold"/>

                    <Border Grid.Column="1" x:Name="CloseWindowButton" Height="20" CornerRadius="10" Background="red" Padding="10,0,10,0" MouseLeftButtonUp="CloseButtonClick" HorizontalAlignment="Right" Margin="0,0,14.5,0" VerticalAlignment="Center" MouseEnter="CloseButtonMouseEnter" MouseLeave="CloseButtonMouseLeave">
                        <TextBlock x:Name="CloseWindowButtonText" Text="Close" HorizontalAlignment="Center" Width="0" VerticalAlignment="Center" TextAlignment="Center" FontWeight="SemiBold" Foreground="Black"/>
                    </Border>
                </Grid>

                <ScrollViewer Grid.Row="1" Background="Transparent" HorizontalAlignment="Left" VerticalAlignment="Top" ScrollViewer.VerticalScrollBarVisibility="Hidden" Margin="15">
                    <StackPanel x:Name="MainContainer" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                </ScrollViewer>
            </Grid>
        </Grid>
    </Border>
</Window>
